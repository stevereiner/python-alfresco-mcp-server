{
  "mcpServers": {
    "python-alfresco-mcp-server": {
      "command": "uv",
      "args": [
        "run", 
        "python-alfresco-mcp-server",
        "--transport", 
        "stdio"
      ],
      "cwd": "/path/to/python-alfresco-mcp-server",
      "env": {
        "ALFRESCO_URL": "http://localhost:8080",
        "ALFRESCO_USERNAME": "admin",
        "ALFRESCO_PASSWORD": "admin"
      }
    }
  }
} 